#!/bin/bash -ex

package=libtiff
version=4.0.3
srcname=tiff-$version
file=$srcname.tar.gz
url=ftp://ftp.remotesensing.org/pub/$package/$file
config=()

### main #############################################################

srcdir=$HOME/sources/thirdparty
builddir=$HOME/build/thirdparty
installdir=$HOME/local/stow

mkdir -p $srcdir
mkdir -p $builddir/$package-$version
mkdir -p $installdir/$package-$version

cd $srcdir
wget -O $file $url
tar zxf $file

cd $builddir/$package-$version
$srcdir/$srcname/configure ${config[@]} --prefix $installdir/$package-$version
make
make install

cd $installdir
stow $package-$version
